{
    "name": "Phishing Detection",
    "version": "1.0.0",
    "description": "a URL based phishing attack detector for all websites",
    "permissions":[
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/",
        "https://*/"
    ],
    "icons":{
        "16": "icons/phishing.png",
        "48": "icons/phishing.png",
        "128": "icons/phishing.png"
    },
    "background":{
        "scripts": ["js/background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}